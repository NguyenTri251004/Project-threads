<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home</title>
    <link rel="icon" href="./assets/image/logo.jpeg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />  
    <link rel="stylesheet" href="/assets/css/reset.css">
    <link rel="stylesheet" href="/assets/css/base.css">
    <link rel="stylesheet" href="/assets/css/details.css">
 </head>
  <body>
    <div class="container-fluid">
        <div class="homepage d-flex justify-content-between">
            <!-- Taskbar -->
            {{> taskbar}}
            <!-- End Taskbar -->

            <!-- Section one -->
            <div class="section-one mx-auto d-flex justify-content-center">
                <div class="container d-flex flex-column">
                    <div class="header d-flex justify-content-center align-items-center position-sticky w-100">
                        <div class="inner-logo d-none align-items-center justify-content-center overflow-hidden">
                            <a href="/home">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-threads" viewBox="0 0 16 16">
                                    <path d="M6.321 6.016c-.27-.18-1.166-.802-1.166-.802.756-1.081 1.753-1.502 3.132-1.502.975 0 1.803.327 2.394.948s.928 1.509 1.005 2.644q.492.207.905.484c1.109.745 1.719 1.86 1.719 3.137 0 2.716-2.226 5.075-6.256 5.075C4.594 16 1 13.987 1 7.994 1 2.034 4.482 0 8.044 0 9.69 0 13.55.243 15 5.036l-1.36.353C12.516 1.974 10.163 1.43 8.006 1.43c-3.565 0-5.582 2.171-5.582 6.79 0 4.143 2.254 6.343 5.63 6.343 2.777 0 4.847-1.443 4.847-3.556 0-1.438-1.208-2.127-1.27-2.127-.236 1.234-.868 3.31-3.644 3.31-1.618 0-3.013-1.118-3.013-2.582 0-2.09 1.984-2.847 3.55-2.847.586 0 1.294.04 1.663.114 0-.637-.54-1.728-1.9-1.728-1.25 0-1.566.405-1.967.868ZM8.716 8.19c-2.04 0-2.304.87-2.304 1.416 0 .878 1.043 1.168 1.6 1.168 1.02 0 2.067-.282 2.232-2.423a6.2 6.2 0 0 0-1.528-.161"/>
                                  </svg>
                            </a>
                        </div>
                        <div class="button-back d-flex">
                            <i class="fa-solid fa-arrow-left"></i>
                        </div>
                        <div class="for-you d-flex align-items-center mx-auto h-100">
                            <a href="/home"><span>For you</span></a>
                        </div>
                        <div class="inner-bars-mobile d-none hover-2 text-center position-absolute d-flex justify-content-center align-items-center" onclick="showInnerBars()">
                            <i class="fa-solid fa-bars-staggered"></i>
                        </div>
                    </div>
                    <div class="inner-status">
                        <div class = "container-post">
                            <div class="post-1">
                                <div class="inner-content">
                                    <div class="inner-image">
                                        <img src="{{ava}}" alt="image">
                                    </div>
                                    <div class="inner-name">
                                        <span class="user-name">{{username}}</span>
                                        <span class="time">{{timeAgo this.created_at }} </span>
                                    </div>
                                    <div class="inner-tus">
                                        <span>{{content}}</span>
                                    </div>
                                    <div class="inner-reaction">
                                        <div class="inner-love" data-id="{{this.threadId}}">
                                            <i class="{{#if isLiked}}fa-solid{{else}}fa-regular{{/if}} fa-heart"></i>
                                            <span>{{totalLikes}}</span>
                                        </div>
                                        <div class="inner-comment">
                                            <i class="fa-regular fa-comment"></i>
                                            <span>{{totalComments}}</span>
                                        </div>
                                        <div class="inner-repost">
                                            <i class="fa-solid fa-repeat"></i>
                                            <span>0</span>
                                        </div>
                                        <div class="inner-direct">
                                            <i class="fa-solid fa-location-arrow"></i>
                                            <span></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="container-replies d-flex justify-content-between align-items-center">
                            <div class="replies">
                                <span>Replies</span>
                            </div>
                            <div class="view-activity">
                                <span>View activity ></span>
                            </div>
                        </div>
                        {{#with currentUser}}
                        <div class="container-post">
                            <div class="post-2">
                                <div class="inner-content">
                                    <div class="inner-image">
                                        <img src="{{profile_picture}}" alt="image">
                                    </div>
                                    <div class="inner-name">
                                        <span class="user-name">{{username}}</span>
                                    </div>
                                    <div class="inner-tus d-flex">
                                        <input type="text" id="comment" placeholder="Bình luận gì đó ...">
                                        <div class="inner-post d-flex justify-content-center align-items-center" id="buttonPostComment">
                                            <span class ="d-flex align-items-center justify-content-center h-100 fw-medium">Post</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/with}}
                        {{#if comments.length}}
                            {{#each comments}}
                        <div class="container-post">
                            <div class="post-3">
                                <div class="inner-content">
                                    <div class="inner-image">
                                        <img src="{{this.users-comments.profile_picture}}" alt="image">
                                    </div>
                                    <div class="inner-name">
                                        <span class="user-name">{{this.users-comments.username}} </span>
                                        <span class="time">{{timeAgo this.created_at }} </span>
                                    </div>
                                    <div class="inner-tus">
                                        <span>{{this.content}}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        {{else}}
                            <p>Chưa có bình luận nào.</p>
                        {{/if}}
                    </div>
                </div>
            </div>
            <!-- End Section One -->

            <!-- Button Create threads -->
            {{> button-create-threads}}
            <!-- End Button Create threads -->
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/assets/js/function.js"></script>
    <script src="/assets/js/details.js"></script>
</body>
</html>