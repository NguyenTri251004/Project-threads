<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Profile</title>
    <link rel="icon" href="./assets/image/logo.jpeg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/css/profile.css">
    <link rel="stylesheet" href="/assets/css/base.css">
</head>
<body>
    <div class="container-fluid">
        <div class="homepage">  
            <!-- Taskbar -->
            {{> taskbar}}
            <!--End Taskbar-->

             <!-- Section one -->
            <div class="section-one">
                <div class="container">
                    <div class="header">
                        Trang cá nhân
                    </div>
                    <div class="profile">
                        <div class="inner-profile">
                            <div class="inner-profile-head">
                                <div class="name">
                                {{user.username}}
                                </div>
                                <div class="profile-pic">
                                <img height="100%" width="100%" alt="" src="{{user.profile_picture}}">  
                                </div>
                            </div>
                            <div class="inner-profile-follower" role="button">
                                 {{totalFollowers}} người theo dõi
                            </div>
                            <div class="follow-call">
                                {{#if isFollowing}}
                                <div class="follow" role="button">
                                    Đang theo dõi
                                </div>
                                {{else}}
                                <div class="follow" role="button">
                                    Theo dõi
                                </div>
                                {{/if}}
                                <div class="call" role="button">
                                    Nhắc đến
                                </div>
                            </div>
                            <div class="thread">
                                Thread
                            </div>
                            <div class="create-thread">
                                <a class="create-thread-logo" href="#">
                                    <img height="100%" width="100%" alt="" src="{{user.profile_picture}}">  
                                </a>
                                <div class="create-thread-middle">
                                    Có gì mới?
                                </div>
                                <div class="create-thread-submit" role="button">
                                    Đăng
                                </div>
                            </div>
                            {{#each threads}}
                            <div class="container-post">
                                <div class="post-1">
                                    <div class="inner-content">
                                        <div class="inner-image">
                                            <img height="100%" width="100%" src="{{this.profile_picture}}" alt="image">
                                        </div>
                                        <div class="inner-name">
                                            <span class="user-name">{{this.username}}</span>
                                            <span class="time">{{timeAgo this.created_at}}</span>
                                        </div>
                                        <div class="inner-tus">
                                            <span>{{this.content}}</span>
                                            {{#if this.image_url}}
                                            <div class="inner-tus-image">
                                                <img src="{{this.image_url}}" alt="">
                                            </div>
                                            {{/if}}
                                        </div>
                                        <div class="inner-reaction">
                                            <div class="inner-love">
                                                <i class="fa-regular fa-heart"></i>
                                                <span>{{this.totalLikes}}</span>
                                            </div>
                                            <div class="inner-comment">
                                                <i class="fa-regular fa-comment"></i>
                                                <span>{{this.totalComments}}</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
             <!-- End Section One -->

            <!-- Button Create threads -->
            {{> button-create-threads}}
            <!-- End Button Create threads -->
        </div>
    </div>
    <script src="/assets/js/profile.js"></script>
</body>
</html>
